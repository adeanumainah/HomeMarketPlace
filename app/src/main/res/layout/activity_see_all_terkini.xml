<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/_16dp"
    android:layout_marginEnd="@dimen/_16dp"
    tools:context=".activity.SeeAllTerkiniActivity">

    <TextView
        android:id="@+id/tv_title_popular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/_24dp"
        android:text="@string/popular"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgHome"
        android:layout_width="@dimen/_30dp"
        android:layout_height="@dimen/_30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_24dp"
        android:src="@drawable/ic_home_black_" />

    <HorizontalScrollView
        android:id="@+id/hs_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title_popular"
        android:layout_marginTop="@dimen/_20dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_category_pempek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16dp"
                android:background="@android:color/darker_gray"
                android:padding="@dimen/_4dp"
                android:text="@string/lable_category_semarang"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16dp" />

            <TextView
                android:id="@+id/tv_category_truffle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16dp"
                android:background="@android:color/darker_gray"
                android:padding="@dimen/_4dp"
                android:text="@string/lable_category_Jkt"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16dp" />

            <TextView
                android:id="@+id/tv_category_nasgor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16dp"
                android:background="@android:color/darker_gray"
                android:padding="@dimen/_4dp"
                android:text="@string/lable_category_Jogja"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16dp" />

            <TextView
                android:id="@+id/tv_category_macaron"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16dp"
                android:background="@android:color/darker_gray"
                android:padding="@dimen/_4dp"
                android:text="@string/lable_category_Tgr"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16dp" />

            <TextView
                android:id="@+id/tv_category_bakpia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16dp"
                android:background="@android:color/darker_gray"
                android:padding="@dimen/_4dp"
                android:text="@string/lable_category_Bogor"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16dp" />

            <TextView
                android:id="@+id/tv_category_coto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16dp"
                android:background="@android:color/darker_gray"
                android:padding="@dimen/_4dp"
                android:text="@string/lable_category_Bdg"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16dp" />

            <TextView
                android:id="@+id/tv_category_kebab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16dp"
                android:background="@android:color/darker_gray"
                android:padding="@dimen/_4dp"
                android:text="@string/lable_category_sby"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16dp" />

            <TextView
                android:id="@+id/tv_category_stroberry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16dp"
                android:background="@android:color/darker_gray"
                android:padding="@dimen/_4dp"
                android:text="@string/lable_category_Pekanbaru"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16dp" />

        </LinearLayout>

    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_all_terkini"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hs_category" />

</RelativeLayout>
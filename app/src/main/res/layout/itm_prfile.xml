<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rellay1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/grad"
            android:paddingBottom="20dp">

            <RelativeLayout
                android:id="@+id/imgUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/circle_border">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/photo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_below="@+id/login_title"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="9dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/user_profile_image_background"
                    android:elevation="4dp"
                    android:src="@drawable/house" />

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="330dp"
                android:layout_height="@dimen/_350dp"
                android:layout_below="@id/imgUser"
                android:layout_marginStart="40dp"
                android:layout_marginTop="@dimen/_50dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rv_profile">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/mustard"
                        android:textSize="@dimen/_18sp"
                        android:id="@+id/upusername"
                        android:textStyle="bold"
                        android:text="@string/upusername"
                        android:layout_marginStart="@dimen/_30dp"
                        android:layout_marginTop="@dimen/_20dp"/>


                    <EditText
                        android:id="@+id/et_username_profile"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45dp"
                        android:drawableStart="@drawable/ic__person"
                        android:layout_below="@id/upusername"
                        android:hint="@string/username"
                        android:textSize="@dimen/_18sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10dp"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/_30dp"
                        android:layout_marginRight="@dimen/_30dp"
                        android:background="@drawable/bg_white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/mustard"
                        android:textSize="@dimen/_18sp"
                        android:id="@+id/upemail"
                        android:textStyle="bold"
                        android:layout_below="@id/et_username_profile"
                        android:text="@string/upemail"
                        android:layout_marginStart="@dimen/_30dp"
                        android:layout_marginTop="@dimen/_10dp"/>

                    <EditText
                        android:id="@+id/et_email_profile"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45dp"
                        android:drawableStart="@drawable/ic__email"
                        android:hint="@string/email"
                        android:textSize="@dimen/_18sp"
                        android:layout_gravity="center"
                        android:layout_below="@id/upemail"
                        android:layout_marginTop="@dimen/_10dp"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/_30dp"
                        android:layout_marginRight="@dimen/_30dp"
                        android:background="@drawable/bg_white"/>

                    <Button
                        android:layout_width="@dimen/_300dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:background="@drawable/btn_gradiasi"
                        android:layout_below="@id/et_email_profile"
                        android:text="@string/sign_out"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/_15dp"
                        android:layout_marginBottom="@dimen/_15dp"
                        android:layout_marginTop="@dimen/_50dp"/>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

